<p style="color: green"><%= notice %></p>

<h1>Recurrent cards</h1>

<div id="recurrent_cards">
  <table>
    <thead>
      <tr>
          <th>Name:</th>
          <th>Board id</th>
          <th>#</th>
      </tr>
    </thead>

    <tbody>
    <% @recurrent_cards.each do |recurrent_card| %>
      <tr>
        <td><%= recurrent_card.name %></td>
        <td><%= recurrent_card.board_id %></td>
        <td><%= link_to "Show this recurrent card", recurrent_card %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New recurrent card", new_recurrent_card_path %>
<br />
<%= link_to "Back to home", root_path %>
