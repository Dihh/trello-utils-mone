<p style="color: green"><%= notice %></p>

<h1>Boards</h1>

<table>
  <thead>
    <tr>
        <th>Id:</th>
        <th>Name:</th>
        <th>User key</th>
        <th>#</th>
    </tr>
  </thead>

  <tbody>
  <% @boards.each do |board| %>
    <tr>
      <td><%= board.id %></td>
      <td><%= board.name %></td>
      <td><%= board.user_key %></td>
      <td><%= link_to "Show this board", board %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New board", new_board_path %>
