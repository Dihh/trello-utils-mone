</div>

<div class="card">
  <div class="card-header">
    <h4 class="card-title">Analyses</h4>
  </div>
  <div class="card-body">
    <%= link_to "New analysis" , new_analysis_path %>
      <div class="table-responsive">
        <table class="table">
          <thead class=" text-primary">
            <tr>
              <th>Name:</th>
              <th>Board id:</th>
              <th>Pre planning:</th>
              <th>Pos planning:</th>
              <th>Start date:</th>
              <th>end date:</th>
              <th>Status:</th>
            </tr>
          </thead>

          <tbody>
            <% @board.analyses.each do |analysis| %>
              <tr>
                <td>
                  <%= analysis.name %>
                </td>
                <td>
                  <%= analysis.board_id %>
                </td>
                <td>
                  <%= analysis.pre_planning %>
                </td>
                <td>
                  <%= analysis.pos_planning %>
                </td>
                <td>
                  <%= analysis.start_date %>
                </td>
                <td>
                  <%= analysis.end_date %>
                </td>
                <td>
                  <%= analysis.status %>
                </td>
                <td>
                  <%= link_to "Show this analysis" , analysis %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h4 class="card-title">Recurrent Cards</h4>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <%= link_to "New cecurrent card" , new_recurrent_card_path %>
        <table class="table">
          <thead class=" text-primary">
            <tr>
              <th>Name:</th>
              <th>Board id</th>
              <th>#</th>
            </tr>
          </thead>

          <tbody>
            <% @board.recurrent_cards.each do |recurrent_card| %>
              <tr>
                <td>
                  <%= recurrent_card.name %>
                </td>
                <td>
                  <%= recurrent_card.board_id %>
                </td>
                <td>
                  <%= link_to "Show this recurrent card" , recurrent_card %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>

<script>
  M.AutoInit();
</script>