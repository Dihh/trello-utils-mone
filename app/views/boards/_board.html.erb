<div class="card">
  <div class="card-header">
    <h4 class="card-title">Board</h4>
  </div>
  <div class="card-body">
    <div id="<%= dom_id board %>">
      <div class="row">
        <div class="col s1"><strong>Id:</strong></div>
        <div class="col s1">
          <%= board.id %>
        </div>
      </div>
      <div class="row">
        <div class="col s1"><strong>Trello id:</strong></div>
        <div class="col s1"><%= board.trello_id %></div>
    </div>
      <div class="row">
        <div class="col s1"><strong>Name:</strong></div>
        <div class="col s1">
          <%= board.name %>
        </div>
      </div>
      <div class="row">
        <div class="col s1"><strong>User id:</strong></div>
        <div class="col s1">
          <%= board.user_id %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h4 class="card-title">Lists</h4>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table">
        <thead class=" text-primary">
          <tr>
            <th>Id:</th>
            <th>Trello id:</th>
            <th>Name:</th>
            <th>Board id</th>
            <th>#</th>
          </tr>
        </thead>

        <tbody>
          <% @board.lists.each do |list| %>
            <tr>
              <td>
                <%= list.id %>
              </td>
              <td>
                <%= list.trello_id %>
              </td>
              <td>
                <%= list.name %>
              </td>
              <td>
                <%= list.board_id %>
              </td>
              <td>
                <%= link_to "Show this list" , list %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h4 class="card-title">Labels</h4>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table">
        <thead class=" text-primary">
          <tr>
            <th>Id:</th>
            <th>Trello id:</th>
            <th>Name:</th>
            <th>Board id</th>
            <th>#</th>
          </tr>
        </thead>

        <tbody>
          <% @board.labels.each do |label| %>
