<% form_content = form_with(model: analysis) do |form| %>
  <%= render "components/form-components/input_text",  form: form, field: "name"%>
  <%= render "components/form-components/input_text",  form: form, field: "board_id"%>
  <%= render "components/form-components/text_area",  form: form, field: "pre_planning"%>
  <%= render "components/form-components/text_area",  form: form, field: "pos_planning"%>
  <%= render "components/form-components/input_date",  form: form, field: "start_date"%>
  <%= render "components/form-components/input_date",  form: form, field: "end_date"%>
  <%= render "components/form-components/input_text",  form: form, field: "status"%>
  <% if analysis.board %>
    <%= render "components/form-components/check_box_list",  form: form, field: "lists", element_list: analysis.lists,
      list: analysis.board.lists, list_item_value: "id", list_item_text: "name"
    %>
  <% end %>

  <%= render "components/form-components/submit",  form: form%>
<% end %>


<%= render "components/form",  form_content: form_content, element: analysis%>